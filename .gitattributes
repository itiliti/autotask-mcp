# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files with LF line endings
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.txt text eol=lf
*.xml text eol=lf
*.html text eol=lf
*.css text eol=lf
*.sh text eol=lf

# Configuration files
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf
.npmrc text eol=lf
.nvmrc text eol=lf
package.json text eol=lf
package-lock.json text eol=lf
tsconfig*.json text eol=lf

# Documentation
*.md text eol=lf diff=markdown
LICENSE text eol=lf
CHANGELOG* text eol=lf
README* text eol=lf

# Denote binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary
*.tgz binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Archives
*.7z binary
*.jar binary
*.rar binary

# Diff settings for specific file types
*.json linguist-language=JSON
*.ts linguist-language=TypeScript
*.js linguist-language=JavaScript
